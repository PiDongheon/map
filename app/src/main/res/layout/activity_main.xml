<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/yellow">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/child2"
        android:src="@drawable/child"

        android:baseline="190dp"
        android:layout_marginTop="270px"
        android:layout_marginLeft="280px" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300px"
        android:text="@string/strBtn1"
        android:background="@drawable/mainbutton"></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn2"
            android:layout_width="540px"
            android:layout_height="wrap_content"
            android:text="@string/strBtn2"
            android:background="@color/yellow"></Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="540px"
            android:layout_height="wrap_content"
            android:text="@string/strBtn3"
            android:background="@color/yellow"></Button>


        ></LinearLayout>




</LinearLayout>